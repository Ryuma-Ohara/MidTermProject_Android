<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ohara.ryuma.midtermproject.FoldersActivity">

    <ListView
        android:id="@+id/list_view_folder"
        android:layout_width="match_parent"
        android:layout_height="460dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="5dp"
        android:background="@color/bottom_menu_bg">

        <ImageButton
            android:id="@+id/del_folder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="4dp"
            android:text="Edit"
            android:background="@drawable/custom_image_button"
            android:src="@drawable/ic_delete_black_24dp"/>

        <ImageButton
            android:id="@+id/edit_folder"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Edit"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/custom_image_button"
            android:src="@drawable/ic_edit_black_24dp"/>

        <Button
            android:id="@+id/add_folder"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="4dp"
            android:text="+"
            android:background="@drawable/custom_image_button"
            android:gravity="center"
            android:textSize="28sp" />

    </LinearLayout>
</LinearLayout>
